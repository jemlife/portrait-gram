
<div class="posts-wrapper row">
  <div class="post">
		<div class= "post-head">
			<div class="name">
				Jeremy Greenwood
			</div>
			</div>
		  <div class="image center-block">
    		<%= image_tag @post.image.url(:size => "500x400"), class: 'img-responsive' %>
		 </div>
     <p class="caption">
      <%= @post.caption %>
        <div class="text-center edit-links">
          <%= link_to "Cancel", posts_path %> |
          <%= link_to "Edit Post", edit_post_path(@post) %>
      </div>
  </div>
